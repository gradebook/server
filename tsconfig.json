{
  "include": [
    "lib/**/*",
    "dev-utils/**/*",
    "test/**/*"
  ],
  "exclude": [
    "lib/frontend/client/"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "types": [
      "mocha",
      "./global",
      "./session"
    ],
    "allowJs": true,
    "noEmit": true,
    "lib": ["es2022"],
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true
  }
}
