{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "course.create.category-list",
  "description": "List of categories for course",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "minProperties": 5,
    "required": [
      "name",
      "weight",
      "position",
      "numGrades",
      "dropped"
    ],
    "properties": {
      "name": {
        "type": [
          "string",
          "null"
        ],
        "minLength": 1,
        "maxLength": 50
      },
      "weight": {
        "anyOf": [
          {
            "type": "number",
            "minimum": 0,
            "maximum": 10000
          },
          {
            "type": "null"
          }
        ]
      },
      "position": {
        "type": [
          "integer",
          "null"
        ],
        "minimum": 0,
        "maximum": 50000
      },
      "numGrades": {
        "type": "integer",
        "minimum": 1,
        "$comment": "Max validated in create-course.js"
      },
      "dropped": {
        "anyOf": [
          {
            "type": "integer",
            "minimum": 0,
            "maximum": 40
          },
          {
            "type": "null"
          }
        ]
      }
    }
  }
}
