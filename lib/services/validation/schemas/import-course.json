{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "course.import",
  "description": "Import a course template",
  "type": "object",
  "additionalProperties": false,
  "required": ["course", "categories"],
  "properties": {
    "course": {
      "$ref": "course.create"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "minProperties": 5,
        "properties": {
          "name": {
            "type": ["string", "null"],
            "minLength": 1,
            "maxLength": 50
          },
          "weight": {
            "anyOf": [
              {
                "type": "number",
                "minimum": 0,
                "maximum": 10000
              },
              {
                "type": "null"
              }
            ]
          },
          "position": {
            "type": ["integer", "null"],
            "$comment": "@todo: Position should have a max string length (e.g. 4 numbers)"
          },
          "numGrades": {
            "type": "integer",
            "minimum": 1,
            "$comment": "Max validated in import-course.js"
          },
          "dropped": {
            "anyOf": [
              {
                "type": "integer",
                "minimum": 0,
                "maximum": 40
              },
              {
                "type": "null"
              }
            ]
          }
        }
      }
    }
  }
}
