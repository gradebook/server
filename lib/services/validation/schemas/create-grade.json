{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "grade.create",
  "description": "Create a grade",
  "type": "object",
  "additionalProperties": false,
  "required": ["course", "category", "name"],
  "properties": {
    "course": {"$ref": "object_id"},
    "category": {"$ref": "object_id"},
    "name": {
      "minLength": 1,
      "maxLength": 50,
      "type": "string"
    },
    "grade": {
      "type": ["number", "null"],
      "minimum": 0,
      "maximum": 999999
    }
  }
}
