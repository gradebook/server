{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "course.create",
  "description": "Create a course",
  "type": "object",
  "additionalProperties": false,
  "anyOf": [
    {"required": ["name", "semester", "credits", "cut1", "cut2", "cut3", "cut4", "cut1Name", "cut2Name", "cut3Name", "cut4Name"]},
    {"required": ["name", "semester", "credits", "cutoffs"]}
  ],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[A-Z]{3,4} \\d{3,4}$"
    },
    "semester": {
      "type": "string",
      "pattern": "\\d{4}(S|U|F|W)"
    },
    "credits": {
      "type": "number",
      "minimum": 0,
      "maximum": 5
    },
    "cutoffs": {
      "type": "string",
      "minLength": 10,
      "maxLength": 100
    },
    "cut1": {"$ref": "course_cut"},
    "cut2": {"$ref": "course_cut"},
    "cut3": {"$ref": "course_cut"},
    "cut4": {"$ref": "course_cut"},
    "cut1Name": {"$ref": "course_cut_name"},
    "cut2Name": {"$ref": "course_cut_name"},
    "cut3Name": {"$ref": "course_cut_name"},
    "cut4Name": {"$ref": "course_cut_name"}
  }
}
