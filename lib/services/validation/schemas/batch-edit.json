{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "grades.batch",
  "description": "Batch Edit Grades",
  "type": "object",
  "additionalProperties": false,
  "dependencies": {
    "delete": {
      "not": {
        "required": ["create"]
      }
    },
    "create": {
      "not": {
        "required": ["delete"]
      }
    }
  },
  "minProperties": 1,
  "properties": {
    "create": {
      "type": "array",
      "minItems": 1,
      "maxItems": 100,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "grade": {"type": ["number", "null"]},
          "name": {
            "minLength": 1,
            "maxLength": 55,
            "type": "string"
          }
        }
      }
    },
    "update": {
      "type": "array",
      "minItems": 1,
      "maxItems": 100,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "minProperties": 1,
        "required": ["id"],
        "properties": {
          "id": {"$ref": "object_id"},
          "grade": {"type": ["number", "null"]},
          "name": {
            "minLength": 1,
            "maxLength": 55,
            "type": "string"
          }
        }
      }
    },
    "delete": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "maxItems": 100,
      "items": {"$ref": "object_id"}
    }
  }
}
