{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "grade.edit",
  "description": "Edit a grade",
  "type": "object",
  "additionalProperties": false,
  "anyOf": [
    {"required": ["name"]},
    {"required": ["grade"]}
  ],
  "properties": {
    "name": {
      "minLength": 1,
      "maxLength": 50,
      "type": ["string", "null"]
    },
    "grade": {
      "type": ["number", "null"]
    }
  }
}
