{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "category.edit",
  "description": "Edit a category",
  "type": "object",
  "additionalProperties": false,
  "minProperties": 1,
  "properties": {
    "name": {
      "type": ["string", "null"],
      "minLength": 1,
      "maxLength": 50
    },
    "weight": {
      "anyOf": [
        {
          "type": "number",
          "minimum": 0,
          "maximum": 10000
        },
        {
          "type": "null"
        }
      ]
    },
    "position": {
      "type": ["integer", "null"]
    }
  }
}
