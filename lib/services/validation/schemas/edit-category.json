{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "category.edit",
  "description": "Edit a category",
  "type": "object",
  "additionalProperties": false,
  "minProperties": 1,
  "properties": {
    "name": {
      "type": ["string", "null"],
      "minLength": 1,
      "maxLength": 50
    },
    "weight": {
      "type": "number",
      "minimum": 1,
      "maximum": 10000
    },
    "position": {
      "type": ["integer", "null"]
    }
  }
}
