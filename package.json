{
  "name": "agb-backend",
  "version": "2.2.0",
  "description": "Backend for Aggie Gradebook",
  "main": "index.js",
  "alias": "agb",
  "repository": "https://https://github.com/joshcosta/aggie-gradebook",
  "authors": [
    "Josh Costa <joshcosta38@tamu.edu>",
    "Vikas Potluri <vikaspotluri123.github@gmail.com>"
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "xo",
    "setup": "node _commands/setup.js",
    "dev": "node _commands/dev.js",
    "backend:dev": "nodemon index.js --ignore lib/frontend/client",
    "test:unit": "mocha test/unit --recursive -r ./test/global.js --file ./test/teardown.js",
    "test:routing": "mocha test/routing -r ./test/global.js --file ./test/teardown.js",
    "test:integration": "mocha test/integration --recursive -r ./test/global.js --file ./test/teardown.js"
  },
  "dependencies": {
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "brute-knex": "^4.0.0",
    "bson-objectid": "^1.3.0",
    "connect-session-knex": "^1.4.0",
    "dayjs": "1.8.16",
    "express": "^4.17.1",
    "express-brute": "^1.0.1",
    "express-session": "^1.16.2",
    "ghost-ignition": "^3.1.0",
    "knex": "^0.19.3",
    "knex-migrator": "^3.3.3",
    "lodash.get": "^4.4.2",
    "mysql": "^2.17.1",
    "node-cron": "^2.0.3",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^2.0.0",
    "sqlite3": "^4.1.0",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "execa": "^2.0.4",
    "istanbul": "^0.4.5",
    "mocha": "^6.2.0",
    "mock-knex": "^0.4.6",
    "nodemon": "^1.19.2",
    "nyc": "^14.1.1",
    "sinon": "^7.4.2",
    "supertest": "^4.0.2",
    "xo": "^0.24.0"
  },
  "xo": {
    "ignores": [
      "old-exporter/**/*.js",
      "lib/frontend/client/**/*.js"
    ],
    "rules": {
      "func-names": [
        "error",
        "as-needed"
      ],
      "no-use-extend-native/no-use-extend-native": "off",
      "func-name-matching": [
        "error",
        {
          "includeCommonJSModuleExports": false,
          "considerPropertyDescriptor": true
        }
      ],
      "no-console": "error"
    },
    "overrides": [
      {
        "files": "test/**/*.js",
        "envs": [
          "node",
          "mocha"
        ],
        "global": [
          "expect",
          "sinon",
          "testUtils"
        ],
        "rules": {
          "func-names": "off",
          "prefer-arrow-callback": "off",
          "no-unused-expressions": "off"
        }
      },
      {
        "files": "lib/frontend/assets/**/*.js",
        "envs": [
          "browser"
        ],
        "global": [
          "M"
        ],
        "rules": {
          "no-console": "off",
          "object-shorthand": "off",
          "unicorn/prefer-spread": "off",
          "unicorn/prefer-query-selector": "off"
        }
      },
      {
        "files": "_commands/**/*.js",
        "rules": {
          "unicorn/no-process-exit": "off",
          "no-console": "off"
        }
      },
      {
        "files": "scripts/**/*.js",
        "rules": {
          "no-console": "off"
        }
      }
    ]
  }
}
