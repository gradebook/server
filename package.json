{
  "name": "@gradebook/server",
  "version": "4.0.0",
  "description": "Backend for Gradebook",
  "main": "index.js",
  "alias": "gb",
  "repository": "https://github.com/gradebook/server",
  "authors": [
    "Josh Costa <joshcosta38@tamu.edu>",
    "Vikas Potluri <vikaspotluri123.github@gmail.com>",
    "Ramsay Smith <ramsaysmith@outlook.com>"
  ],
  "private": true,
  "scripts": {
    "lint": "xo",
    "setup": "node _commands/setup.js",
    "dev": "node _commands/dev.js",
    "backend:dev": "nodemon index.js --ignore lib/frontend/client --ignore test --ignore scripts",
    "test:functional": "mocha test/functional --recursive -r ./test/global.js --file ./test/teardown.js",
    "test:unit": "nyc --reporter=html --reporter=text mocha test/unit --recursive -r ./test/global.js --file ./test/teardown.js",
    "test:unit:debug": "mocha test/unit --recursive -r ./test/global.js --file ./test/teardown.js",
    "test:integration": "mocha test/integration --recursive -r ./test/global.js --file ./test/teardown.js",
    "typecheck": "tsc index.js --noEmit --lib es7 --target es2019 -m commonjs --allowJS --esModuleInterop"
  },
  "dependencies": {
    "@gradebook/express-brute-redis": "0.1.0",
    "@gradebook/fast-pluralize": "0.0.2",
    "@gradebook/passport-utils": "0.1.1",
    "ajv": "6.12.3",
    "bluebird": "3.7.2",
    "body-parser": "1.19.0",
    "bson-objectid": "1.3.1",
    "connect-redis": "5.0.0",
    "connect-session-knex": "1.7.3",
    "cookie-parser": "1.4.5",
    "dayjs": "1.8.31",
    "express": "4.17.1",
    "express-brute": "1.0.1",
    "express-session": "1.17.1",
    "ghost-ignition": "4.2.1",
    "got": "11.5.1",
    "ioredis": "4.17.3",
    "knex": "0.21.2",
    "lodash.get": "4.4.2",
    "mysql": "2.18.1",
    "node-cron": "2.0.3",
    "passport": "0.4.1",
    "passport-google-oauth20": "2.0.0",
    "sqlite3": "5.0.0",
    "validator": "13.1.1"
  },
  "devDependencies": {
    "@gradebook/actions-hook": "0.2.0",
    "@gradebook/together": "0.2.0",
    "@types/express": "4.17.7",
    "@types/express-session": "1.17.0",
    "chai": "4.2.0",
    "chokidar": "3.4.2",
    "eslint-plugin-mocha": "8.0.0",
    "execa": "4.0.3",
    "mocha": "8.1.0",
    "mock-knex": "0.4.9",
    "nock": "^13.0.3",
    "nodemon": "2.0.4",
    "nyc": "15.1.0",
    "rewire": "5.0.0",
    "sinon": "9.0.2",
    "supertest": "4.0.2",
    "typescript": "3.9.7",
    "xo": "0.25.3"
  },
  "xo": {
    "ignores": [
      "lib/frontend/client/**/*.js"
    ],
    "extends": "plugin:mocha/recommended",
    "plugins": [
      "mocha"
    ],
    "rules": {
      "func-names": [
        "error",
        "as-needed"
      ],
      "no-use-extend-native/no-use-extend-native": "off",
      "func-name-matching": "off",
      "no-console": "error"
    },
    "overrides": [
      {
        "files": "test/**/*.js",
        "envs": [
          "node",
          "mocha"
        ],
        "global": [
          "expect",
          "sinon",
          "testUtils"
        ],
        "rules": {
          "func-names": "off",
          "prefer-arrow-callback": "off",
          "no-unused-expressions": "off"
        }
      },
      {
        "files": "_commands/**/*.js",
        "rules": {
          "unicorn/no-process-exit": "off",
          "no-console": "off"
        }
      },
      {
        "files": "scripts/**/*.js",
        "rules": {
          "no-console": "off"
        }
      },
      {
        "files": "lib/frontend/assets/*.js",
        "envs": [
          "browser"
        ]
      }
    ]
  }
}
